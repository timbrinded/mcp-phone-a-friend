{
  "compilerOptions": {
    // Target modern JavaScript
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    
    // Module resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    
    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    
    // Bun
    "types": ["bun-types"],
    
    // Source maps for debugging
    "sourceMap": true,
    
    // Base directory
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["src/**/*", "test/*.ts"],
  "exclude": ["node_modules"]
}