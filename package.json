{
  "name": "phone-a-friend-mcp",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "bun@1.1.0",
  "license": "MIT",
  "description": "MCP server that bridges AI models for consultation",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/phone-a-friend-mcp"
  },
  "bin": "./dist/run.js",
  "zshy": {
    "bin": "./src/run.ts",
    "exports": "./src/index.ts",
    "cjs": false
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "zshy",
    "dev": "bun run --hot src/index.ts",
    "check": "bun --bun tsc --noEmit",
    "test": "bun test-server.js"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.1",
    "@ai-sdk/google": "^2.0.3",
    "@ai-sdk/openai": "^2.0.7",
    "@ai-sdk/xai": "^2.0.3",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "ai": "^5.0.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.6.2",
    "zshy": "^0.3.5"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
